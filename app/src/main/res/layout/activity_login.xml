<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/lightblue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginGLH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginGLH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginGLH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/loginGLH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"
        />
    <ImageView
        android:id="@+id/fotoMar"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/animalesmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/loginGLH1"
        />
    <TextView
        android:id="@+id/textologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@id/fotoMar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginusername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textologin"
        app:layout_constraintStart_toStartOf="@id/loginGLH2"
        app:layout_constraintEnd_toEndOf="@id/loginGLH3"
        app:startIconDrawable="@drawable/baseline_person_24"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:paddingStart="45dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/logincontra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginusername"
        app:layout_constraintStart_toStartOf="@id/loginGLH2"
        app:layout_constraintEnd_toEndOf="@id/loginGLH3"
        app:startIconDrawable="@drawable/baseline_person_24"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="ContraseÃ±a"
            android:inputType="textPersonName"
            android:paddingStart="45dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/botonlogin"
        android:layout_width="140dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/logincontra"
        app:layout_constraintStart_toStartOf="@id/loginGLH4"
        android:layout_marginTop="20dp"
        android:hint="Login"
        android:textColorHint="@color/blue"
        android:backgroundTint="@color/sand"
        />
    <Button
        android:id="@+id/botonregist"
    android:layout_width="140dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/botonlogin"
    app:layout_constraintStart_toStartOf="@id/loginGLH4"
    android:layout_marginTop="20dp"
    android:hint="Register"
    android:textColorHint="@color/blue"
    android:backgroundTint="@color/sand"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
