<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SplashGLH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"
        />
    <View
        android:id="@+id/splashFondoCarga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondocarga"
        android:alpha="0.9"
        />
    <ImageView
        android:id="@+id/fotoMar"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/animalesmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/SplashGLH1"
        />
   <TextView
       android:id="@+id/textosplash"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Examen"
       android:textSize="40dp"
       app:layout_constraintTop_toBottomOf="@+id/fotoMar"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
